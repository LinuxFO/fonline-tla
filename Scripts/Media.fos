///@ RemoteCall Client DoPlayVideo(int canStop, string videoName)
///@ RemoteCall Client DoPlayMusic(int pos, int repeat, string musicName)

#ifdef __SERVER

void PlayMusic(Critter cr, string musicName, uint pos, uint repeat)
{
    if (cr.IsPlayer())
        cr.ClientCall.DoPlayMusic(int(pos), int(repeat), musicName);
}

void PlayMusic(Map map, string musicName, uint pos, uint repeat)
{
    Critter[] critters = {};
    Obsolete::GetCritters(map, 0, FIND_ALL | FIND_ONLY_PLAYERS, critters);
    for (uint i = 0, j = critters.length(); i < j; i++)
        critters[i].ClientCall.DoPlayMusic(int(pos), int(repeat), musicName);
}

void PlayVideo(Critter cr, string videoName, bool canStop)
{
    if (cr.IsPlayer())
        cr.ClientCall.DoPlayVideo(canStop ? 1 : 0, videoName);
}

void PlayVideo(Map map, string videoName, bool canStop)
{
    Critter[] critters = {};
    Obsolete::GetCritters(map, 0, FIND_ALL | FIND_ONLY_PLAYERS, critters);
    for (uint i = 0, j = critters.length(); i < j; i++)
        critters[i].ClientCall.DoPlayVideo(canStop ? 1 : 0, videoName);
}

#endif

#ifdef __CLIENT

void DoPlayMusic(int pos, int repeat, string musicName)
{
    PlayMusic(musicName, uint(repeat));
}

void DoPlayVideo(int canStop, string videoName)
{
    PlayVideo(videoName, canStop != 0);
}

#endif
