// ~cmd CreateLocation desert_10 0 0
#ifdef __CLIENT

bool ParseMessage(string message)
{
    string[] args = message.split(" ");
    if (args.length() > 2 && args[0] == "cmd") {
        hstring a1 = 0, a2 = 0;
        int p1 = 0;
        string cmd = args[1];
        if (cmd == "CreateLocation") {
            a1 = hstring(args[2]);
            p1 = 0; // args[ 3 ] ;
            a2 = hstring(args[4]);
            ServerCall.CreateLocationSelf(a1, p1, a2);
            return true;
        }
    }
    return false;
}

#endif
